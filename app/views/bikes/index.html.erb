<div class="container">
  <% @bikes.each do |bike| %>

      <div class="col-md-4">
        <div class="thumbnail">
          <img src="..." alt="...">
          <div class="caption text-center">
            <h3><%= bike.build_name %></h3>
            <p><%= bike.description %></p>
            <%= link_to bike_path(bike.id), class: "btn btn-primary" do %>
              View Build
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>
